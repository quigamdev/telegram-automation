@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Active accounts</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Is Online</th>
                        <th>Is scheduled</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    
                     @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>@account.Name </td>
                            <td>@account.IsOnline</td>
                            <td>@account.NextSchedule</td>
                            <td>
                                <a href="#" class="btn btn-danger btn-icon-split" onclick="this.closest('form').submit();return false;">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-stop"></i>
                                    </span>
                                    <span class="text">Activate</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
